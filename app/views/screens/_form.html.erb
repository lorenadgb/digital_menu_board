<%= form_with(model: screen, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :screen_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :interval %>
    <%= form.number_field :interval, value: 20, id: :screen_name, class: 'form-control' %>
  </div>

  <%= form.label :images %>
  <% if screen %>
    <% screen.images.each_with_index do |image, index| %>
      <div class="form-group">
        <%= image_tag image.url, height: '180', width: '260' %>
        <%= link_to "Delete", screen_image_path(screen, index), :method => :delete, data: { confirm: "Are you sure you want to delete this image?" } %>
      </div>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.file_field :images, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png" %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
