<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @screen.name %>
</p>

<p>
  <strong>Interval:</strong>
  <%= @screen.interval %>
</p>

<p>
  <strong>User:</strong>
  <%= @screen.user.email %>
</p>

<p>
  <strong>Images:</strong>
</p>

<% @screen.images.each do |image| %>
  <p>
    <%= image_tag image.url, height: '200', width: '290' %>
  </p>
<% end %>

<%= link_to 'Edit', edit_screen_path(@screen) %> |
<%= link_to 'Slideshow', slideshow_screens_path(@screen) if @screen.images.first %> |
<%= link_to 'Back', screens_path %>
